---
import MainMenuLayout from "../layouts/MainMenuLayout.astro";
import InfoCard from "../components/infoCard.astro";
import ProfileImage from "../components/ProfileImage.astro";
---

<MainMenuLayout title="Blodroed Portfolio" 
				seoTitle="Homepage, Blodroed Portfolio" 
				seoDesc="Software engineer with expertise in .NET, C++, C# and Backend, also a DnD DM!!">
	
	<div id="welcome-info" class="w-8/12 md:w-6/12 mx-auto mb-5 border-b-2 border-slate-500 border-opacity-50">
		<h1 class="text-xl md:text-2xl lg:text-2xl text-left flex flex-col lg:flex-row items-center justify-center mb-5">
			<span class="order-2 lg:order-1">Hello Humanling, I am...
				<span style="text-shadow: 0px 0px 40px rgba(96, 165, 250, 0.35);" class="text-5xl md:text-6xl lg:text-7xl text-blue-400 font-bold">Blodroed</span>
				<span class="text-xl text-blue-500 block">> Data Engineering Student</span>
			</span>
			<ProfileImage 
				size="responsive"
				showGlow={true}
				class="order-1 lg:order-2 ml-0 lg:ml-16 xl:ml-36 mb-5 lg:mb-0"
			/>
		</h1>
	</div>

	<div id="card-box" class="w-8/12 mx-auto mb-5 grid sm:grid-cols-1 md:grid-cols-3 gap-4">
		<InfoCard title="About Me" description="Learn more about my background, skills, and interests." link="/about" icon="user" />
		<InfoCard title="Projects" description="Here you can see all the projects i have worked on and is currently working on." link="/projects" icon="project-diagram" />
		<InfoCard title="Contact" description="Get in touch with me for collaborations or inquiries." link="/contact" icon="envelope" />
	</div>
</MainMenuLayout>